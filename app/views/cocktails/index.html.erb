<div class="container">

  <%= link_to "Create a cocktail", new_cocktail_path,class:"btn btn-index" %>

  <%= render './shared/navbar.html.erb' %>
  
  <div class="container">
      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" />
          <button name="button" type="submit" class="btn btn-flat">
            <i class="fas fa-search"></i> Search
          </button>
        </div>
      <% end %>
  </div>

  <div class="container">
    <div class="row row-cols-3">
      <% @cocktails.each do |cocktail| %>
            <div class="col">
              <div class="card" style="width: 18rem;">
                <img src="https://source.unsplash.com/featured/?cocktail/300x300" class="card-img" alt="coktail">
                <div class="card-body">
                  <h5 class="card-title"> <%= cocktail.name%></h5>
                  <p class="card-text"> <%= link_to "Details", cocktail_path(cocktail), class: "btn btn-index" %>
                  </p>
                </div>
              </div>
            </div>
      <% end %>
    </div>
  </div>


</div>


  


