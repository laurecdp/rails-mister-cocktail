<h1> Fancy cocktails 🍸</h1>

  <% @cocktails.each do |cocktail| %>
  <div class="card bg-dark text-white">
  <img src="https://source.unsplash.com/featured/?cocktails" class="card-img" alt="...">
  <div class="card-img-overlay">
    <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
    <p class="card-text"><%= link_to "Create a cocktail", new_cocktail_path %></p>
  <% end %>
  </div>
</div>

