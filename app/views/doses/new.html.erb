<div class="container">

  <div class="form-card"> 
    <h1>Customize your cocktail</h1>

    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description,
                  label: "Add a description" %>
      <%= f.association :ingredient,
                        label: "Choose ingredients",
                        as: :select %>
      <%= f.button :submit, "Save", class: 'btn btn-index' %>
    <% end %>
  </div>

</div>