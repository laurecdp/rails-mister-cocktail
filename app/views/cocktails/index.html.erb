<div class="container">

  <%= link_to(new_cocktail_path) do %>
    <button type="button" class="btn btn-light">Create a cocktail</button>
  <% end %>

  <div class="container">
      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" />
          <button name="button" type="submit" class="btn btn-flat">
            <i class="fas fa-search"></i> Search
          </button>
        </div>
      <% end %>
  </div>

  <div class="container">
    <div class="row row-cols-3">
      <% @cocktails.each do |cocktail| %>
            <div class="col">
              <div class="card" style="width: 18rem;">
                <img src="https://source.unsplash.com/featured/?cocktail/300x300" class="card-img" alt="coktail">
                <div class="card-body">
                  <h5 class="card-title"> <%= cocktail.name%></h5>
                  <p class="card-text"> <%= link_to(cocktail_path(cocktail)) do %>
                      <button type="button" class="btn btn-light">Details</button>
                      <% end %>
                  </p>
                </div>
              </div>
            </div>
      <% end %>
    </div>
  </div>


</div>


  


