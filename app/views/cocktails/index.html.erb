<div class="home-bg">
  <h1>Fancy cocktails 🍸</h1>
</div>

<div class="container">
  <div class="row row-cols-auto">
      <% @cocktails.each do |cocktail| %>
      <div class="col-sm">
        <div class="card" style="width: 18rem;">
          <img src="https://source.unsplash.com/featured/?cocktails" class="card-img" alt="coktail">
          <div class="card-body">
          <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
          <p class="card-text"> <%= link_to(new_cocktail_path) do %>
          <button>Create a cocktail</button>
          <% end %>
          </p>
          </div>
        </div>
    </div>
    <% end %>
  </div>
</div>